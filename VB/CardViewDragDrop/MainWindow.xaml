<Window x:Class="CardViewDragDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:DXSample="clr-namespace:DXSample"
        xmlns:dde="clr-namespace:DXSample.DragDropExtension"
        Title="MainWindow" Height="647" Width="1052.32">
    <Window.DataContext>
        <DXSample:OrderHelper/>
    </Window.DataContext>
    <Grid>
        <dxg:GridControl AutoPopulateColumns="True"
                         Margin="10"
                         ItemsSource="{Binding Orders}">
            <dxg:GridControl.View>
                <dxg:CardView ShowTotalSummary="True"
                              EditorShowMode="MouseUp"
                              MultiSelectMode="Row" />
            </dxg:GridControl.View>
            <i:Interaction.Behaviors>
                <dde:CardDragDropManager/>
            </i:Interaction.Behaviors>
        </dxg:GridControl>
    </Grid>
</Window>
